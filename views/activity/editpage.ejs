    <template id="inputerUI" >
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">修正{{activity.a25code}}之對照資料</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{card_subtitle}}</h6>
          <form action="/activity/update" method="post">
            <div class="form-group" :key="inputerUIkey">
            <label for="formGroupExampleInput2">{{items.item}}</label>
            <input type="text" name="_id" class="form-control" id="formGroupExampleInput" :value="activity._id">

            <label for="formGroupExampleInput2">{{items.item0}}</label>
            <input type="text" :name="names.name0" class="form-control" id="formGroupExampleInput0" :value="activity.a05productID">

            <label for="formGroupExampleInput2">{{items.item1}}</label>
            <input type="text" :name="names.name1" class="form-control" id="formGroupExampleInput1" :value="activity.a10type">

            <label for="formGroupExampleInput2">{{items.item2}}</label>
            <input type="text" :name="names.name2" class="form-control" id="formGroupExampleInput2" :value="activity.a15nickname">

            <label for="formGroupExampleInput2">{{items.item3}}</label>
            <input type="text" :name="names.name3" class="form-control" id="formGroupExampleInput3" :value="activity.a20describe">

              <input type="hidden" name="statusreport" class="form-control" id="msg1" value="由修正activity後進入本頁">

              <input type="submit" id="button1" value="確定送出" class="btn btn-info">
            </div>
          </form>
          <input type="submit" id="button2" value="重新輸入" class="btn btn-info" @click="rerender()">
