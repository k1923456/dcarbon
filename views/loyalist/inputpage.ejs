  <title>單筆loyalist資料</title>
  </head>
  <body>
    <div id="show_div">
      <bander></bander>
        <inputer></inputer>
    </div>

    <template id="banderUI">
      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">{{brand}}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/base4dcarbon/loyalist">{{lastpage}}<span class="sr-only">(current)</span></a>
              </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">{{input1}}<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">{{inputbatch}}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">{{crawl}}</a>
            </li>
          </ul>
          <span class="navbar-text">
            <font size="1">{{statusreport}}</font>
          </span>
        </div>
      </nav>
    </template>

    <template id="inputerUI" ">
      <div class="card" style="width: 36rem;" >
        <div class="card-body">
          <h5 class="card-title">{{card_title}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{card_subtitle}}</h6>
          <form action="/base4dcarbon/loyalist/add" method="post">
            <div class="form-group" :key="inputerUIkey">

              <label for="formGroupExampleInput2">{{items.item0}}</label>
              <input type="text" :name="names.name0" class="form-control" id="formGroupExampleInput0" :placeholder="holders.holder0">

              <label for="formGroupExampleInput2">{{items.item1}}</label>
              <input type="text" :name="names.name1" class="form-control" id="formGroupExampleInput1" :placeholder="holders.holder1">

              <label for="formGroupExampleInput2">{{items.item2}}</label>
              <select :name="names.name2" class="form-select" :placeholder="holders.holder2">
                <optgroup v-for="role of roles" :key="role._id">
                  <option :value="role.a25code">{{role.a30mean}}</option>
                  </optgroup>
                  </select>
                <br>

              <label for="formGroupExampleInput2">{{items.item3}}</label>
              <input type="text" :name="names.name3" class="form-control" id="formGroupExampleInput3" :placeholder="holders.holder3">

              <label for="formGroupExampleInput2">{{items.item4}}</label>
              <input type="text" :name="names.name4" class="form-control" id="formGroupExampleInput4" :placeholder="holders.holder4">

              <label for="formGroupExampleInput2">{{items.item5}}</label>
              <input type="text" :name="names.name5" class="form-control" id="formGroupExampleInput5" :placeholder="holders.holder5">

              <label for="formGroupExampleInput2">{{items.item6}}</label>
              <input type="text" :name="names.name6" class="form-control" id="formGroupExampleInput6" :placeholder="holders.holder6">

              <label for="formGroupExampleInput2">{{items.item7}}</label>
              <input type="text" :name="names.name7" class="form-control" id="formGroupExampleInput7" :placeholder="holders.holder7">

              <label for="formGroupExampleInput2">{{items.item8}}</label>
              <select :name="names.name8" class="form-select" :placeholder="holders.holder8">
                <optgroup v-for="expertise of expertises" :key="expertise._id">
                  <option :value="expertise.a25code">{{expertise.a30mean}}</option>
                  </optgroup>
                  </select>
                <br>

              <label for="formGroupExampleInput2">{{items.item9}}</label>
              <input type="text" :name="names.name9" class="form-control" id="formGroupExampleInput9" :placeholder="holders.holder9">

              <label for="formGroupExampleInput">{{items.item99}}</label>
              <input type="text" name="a99footnote" class="form-control" id="formGroupExampleInput99" :placeholder="holders.holder99">

              <input type="hidden" name="statusreport" class="form-control" id="msg1" value="由單筆loyalist輸入後進入本頁">

              <input type="submit" id="button1" value="確定送出" class="btn btn-info">
            </div>
          </form>
          <input type="submit" id="button2" value="重新輸入" class="btn btn-info" @click="rerender()">
            <!-- <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a> -->
        </div>
      </div>
    </template>

<!-- Vue CDN-->
<script src="https://unpkg.com/vue@2.6.14/dist/vue.js"></script>
<script>
Vue.component("bander",{

    data(){
      return {
        brand:"dCarbon內部功能",
        lastpage:"回前頁",
        input1:"手動新增1筆",
        inputbatch:"批次輸入",
        crawl:"從網路抓取",
        statusreport:'<%- statusreport %>'
      }
    },

    template:"#banderUI"
  });
  Vue.component("inputer",{

    data(){
      return {
        card_title:"新增1個淨零義士",
        card_subtitle:"請輸入以下各項資料:",
        items:{
          item0:"姓",
          item1:"名",
          item2:"登錄義士別",
          item3:"電話",
          item4:"手機",
          item5:"Email",
          item6:"主要學歷",
          item7:"主要經歷",
          item8:"主要專長",
          item9:"其他",
          item99:"特別註記"
          },
        names:{
          name0:"a05lastname",
          name1:"a10firstname",
          name2:"a15role",
          name3:"a20tel",
          name4:"a25phone",
          name5:"a30email",
          name6:"a35degree",
          name7:"a40resume",
          name8:"a45expertise",
          name9:"a50extra"
            },
        holders:{
          holder0:"字串,",
          holder1:"字串,",
          holder2:"字串,如名詞字典選項",
          holder3:"字串,",
          holder4:"字串,",
          holder5:"字串,",
          holder6:"陣列,",
          holder7:"陣列,",
          holder8:"陣列,如名詞字典選項",
          holder9:"字串,",
          holder99:"字串"
            },
        termlist:JSON.parse(decodeURIComponent('<%=termlist%>')),
        roles:[],
        expertises:[],
      inputerUIkey:0
      }
    },
    mounted:function(){
        for(term of this.termlist){
            if(term.a20field=="a15role"){
                this.roles.push(term)
            }
        }
        for(term of this.termlist){
            if(term.a20field=="a45expertise"){
                this.expertises.push(term)
            }
        }
    },
    methods:{
        rerender:function() {
      this.inputerUIkey += 1;
      console.log("inputerUIkey:"+this.inputerUIkey)
    }
    },

    template:"#inputerUI"
  });

